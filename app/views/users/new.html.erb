<div class="container">
  <div class="row ">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title text-center">Cadastro de cliente</h3>
          </div>
          <div class="panel-body">
            <%= form_for @user do |f| %>
              <div class="form-group">
                <%= f.label :username, "Usuário", class: "text-center" %><br />
                <%= f.text_field :username, autofocus: true, class: "form-control" %>
              </div>
              
              <div class="form-group">
                <%= f.label :name, "Empresa", class: "text-center" %><br />
                <%= f.text_field :name, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :email, class: "text-center" %><br />
                <%= f.email_field :email, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :contact_name, "Nome do contato", class: "text-center" %><br />
                <%= f.text_field :contact_name, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :phone, "Telefone", class: "text-center" %><br />
                <%= f.text_field :phone, class: "form-control" %>
              </div>


              <div class="form-group">
                <%= f.label :password, "Senha", class: "text-center" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, "Confirmação da senha", class: "text-center" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "Sign up", value: "Cadastrar", class: "btn btn-lg btn-success btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
        <p class="text-center"><%= link_to "Início", root_path, class: "btn btn-primary text" %></p>
      </div>
  </div>
</div>

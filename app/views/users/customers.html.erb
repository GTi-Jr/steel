<h3 class="text-center"><%= t('table.client_list') %></h3>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <th><%= t('user.name') %></th>
      <th><%= t('user.username') %></th>
      <th><%= t('user.email') %></th>
      <th><%= t('user.phone') %></th>
      <th><%= t('user.contact_name') %></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="<%= "border-left-green" if user.has_any_active_project? %>">
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= link_to user.username, user_path(user) %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.contact_name %></td>
        </tr>        
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @projects, class: "text-center" %>
</div>
<div class="text-center">
  <%= link_to t('buttons.home'), root_path, class:"btn btn-primary" %>
</div>
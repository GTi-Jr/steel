<!DOCTYPE html>
<html>
  <head>
    <title>Steel</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="bg-whiteish">
    <div class="notices container-fluid hide">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <!-- Botão responsivo -->
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_url, class: "navbar-brand" do %>
            <b>Steel</b>service
          <% end  %>
        </div>

        <!-- Links do navbar -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <!--  Links à direita -->
          
          <ul class="nav navbar-nav navbar-right">
            <% if current_user.is_admin? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ações<span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Cadastrar cliente", new_user_path %></li>
                  <li><%= link_to "Cadastrar administrador", new_admin_users_path %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Ver Clientes", customers_users_path %></li>
                  <li><%= link_to "Ver Administradores", admins_users_path %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Todos os usuários", users_path %></li>
                  <li><%= link_to "Todos os projetos", projects_path %></li>
                </ul>
              </li>
            <% end %>
            <% if user_signed_in? %>
              <li><a href="">Logado como <b><%= current_user.username %></b></a></li>
              <li><%= link_to "Sair", destroy_user_session_path, method: :delete, class: "btn btn-danger white-text"%></li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>   
    <div class="container">
      <%= yield %>
    </div>
        
   
  </body>
</html>
<h3 class="text-center">Todos os projetos</h3>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <th>Nome</th>
      <th>Cliente</th>
      <th>Status</th>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <% if project.completed? %>
          <tr class="bg-success">
            <td><%= link_to project.name, project_path(project) %></td> 
            <td><%= link_to project.user.username, user_path(project.user) %></td>     
            <td>Completado</td>
          </tr>
        <% elsif project.canceled? %>
          <tr class="bg-danger">
            <td><%= link_to project.name, project_path(project) %></td>    
            <td><%= link_to project.user.username, user_path(project.user) %></td>     
            <td>Cancelado</td>  
          </tr>
        <% else %>
          <tr>
            <td><%= link_to project.name, project_path(project) %></td>
            <td><%= link_to project.user.username, user_path(project.user) %></td>     
            <td>Em andamento</td> 
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
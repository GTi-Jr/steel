<div class="container">
  <div class="row ">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title text-center"><%= t('project.create') %></h3>
        </div>
        <div class="panel-body">
          <%= form_for @project do |f| %>
            <div class="form-group">
              <%= f.label :name, t('project.name') , class: "text-center" %><br />
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
            
            <div class="form-group">
              <%= f.label :description, t('project.description'), class: "text-center" %><br />
              <%= f.text_area :description, class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit t('buttons.create_project'), class: "btn btn-lg btn-success btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
      <p class="text-center">
      <div class="text-center">
        <%= link_to t('buttons.back'), :back, class: "btn btn-primary text" %>
        <%= link_to t('buttons.home'), root_path, class: "btn btn-primary text" %></p>
      </div>
    </div>
  </div>
</div>

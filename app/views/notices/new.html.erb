<div class="container">
  <div class="row ">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title text-center">Cadastro de not√≠cia</h3>
          </div>
          <div class="panel-body">
            <%= form_for @notice do |f| %>
              <div class="form-group">
                <%= f.label :title, t('notice.title'), class: "text-center" %><br />
                <%= f.text_field :title, autofocus: true, class: "form-control" %>
              </div>
              
              <div class="form-group">
                <%= f.label :description, t('notice.description'), class: "text-center" %><br />
                <%= f.text_field :description, class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit t('notice.register'), class: "btn btn-lg btn-success btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
        <p class="text-center"><%= link_to t('buttons.home'), root_path, class: "btn btn-primary text" %></p>
      </div>
  </div>
</div>


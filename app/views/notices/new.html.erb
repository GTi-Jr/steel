<div class="container">
  <div class="row ">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title text-center">Cadastro de notícia</h3>
          </div>
          <div class="panel-body">
            <%= form_for @notice, :html => {:multipart => true} do |f| %>
              <div class="form-group">
                <%= f.label :title, "Título", class: "text-center" %><br />
                <%= f.text_field :title, autofocus: true, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :description, "Descrição", class: "text-center" %><br />
                <%= f.text_field :description, class: "form-control" %>
              </div>
              <%= f.fields_for :photos do |p| %>
                <div class = "form-group">
                  <%= p.label :image %>
                  <%= p.file_field :image, multiple: true, name:"photos[image][]"%>
                </div>

              <% end %>
              <div class="actions">
                <%= f.submit "Sign up", value: "Cadastrar", class: "btn btn-lg btn-success btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
        <p class="text-center"><%= link_to "Início", root_path, class: "btn btn-primary text" %></p>
      </div>
  </div>
</div>

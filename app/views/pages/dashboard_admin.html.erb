<h3>Projetos ativos</h3>
<table border="1">
  <tr>
    <td>Projeto</td>
    <td>Cliente</td> 
  </tr>
  <% if @projects %>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to project.name, project_path(project)  %>
        </td>
        <td>
          <%= link_to project.user.username, user_path(project.user) %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>

    <table class="table table-striped">
      <thead>
        <th>Nome</th>
        <th>Status</th>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <% if project.completed? %>
            <tr class="bg-success">
              <td><%= link_to project.name, project_path(project) %></td>      
              <td>Completado</td>
            </tr>
          <% elsif project.canceled? %>
            <tr class="bg-danger">
              <td><%= link_to project.name, project_path(project) %></td>    
              <td>Cancelado</td>  
            </tr>
          <% else %>
            <tr>
              <td><%= link_to project.name, project_path(project) %></td>     
              <td>Em andamento</td> 
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

